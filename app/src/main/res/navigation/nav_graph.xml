<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.iss.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/propertyDetailFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/myActivitiesFragment"
        android:name="com.iss.ui.activities.MyActivitiesFragment"
        android:label="fragment_my_activities"
        tools:layout="@layout/fragment_my_activities" />
    
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.iss.ui.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" />
    
    <fragment
        android:id="@+id/propertyDetailFragment"
        android:name="com.iss.ui.detail.PropertyDetailFragment"
        android:label="Property Details"
        tools:layout="@layout/fragment_property_detail">
        <argument
            android:name="property_id"
            app:argType="long" />
    </fragment>
    
</navigation>