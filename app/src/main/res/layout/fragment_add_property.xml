<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- 滚动内容 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 基本信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Listing Title -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilListingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Listing Title"
                        app:startIconDrawable="@drawable/ic_home"
                        style="@style/SearchBoxStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etListingTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Town -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Town"
                        app:startIconDrawable="@drawable/ic_location"
                        app:endIconDrawable="@drawable/ic_dropdown"
                        app:endIconMode="custom"
                        style="@style/SearchBoxStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Postal Code -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPostalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Postal Code"
                        app:startIconDrawable="@drawable/ic_location"
                        style="@style/SearchBoxStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPostalCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- House Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Bedrooms and Bathrooms -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilBedroomNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Bedrooms"
                            app:startIconDrawable="@drawable/ic_bedroom"
                            style="@style/SearchBoxStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBedroomNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilBathroomNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Bathrooms"
                            app:startIconDrawable="@drawable/ic_bathroom"
                            style="@style/SearchBoxStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBathroomNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Street Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilStreetName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Street Name"
                        app:startIconDrawable="@drawable/ic_location"
                        style="@style/SearchBoxStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etStreetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Block and Storey -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilBlock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Block"
                            app:startIconDrawable="@drawable/ic_home"
                            style="@style/SearchBoxStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBlock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilStorey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Storey"
                            app:startIconDrawable="@drawable/ic_storey"
                            style="@style/SearchBoxStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etStorey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Floor Area and Construction Year -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilFloorAreaSqm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Floor Area (sqm)"
                            app:startIconDrawable="@drawable/ic_area"
                            style="@style/SearchBoxStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etFloorAreaSqm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilTopYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Construction Year"
                            app:startIconDrawable="@drawable/ic_home"
                            app:endIconDrawable="@drawable/ic_dropdown"
                            app:endIconMode="custom"
                            style="@style/SearchBoxStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTopYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Flat Model -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFlatModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Flat Model"
                        app:startIconDrawable="@drawable/ic_home"
                        app:endIconDrawable="@drawable/ic_dropdown"
                        app:endIconMode="custom"
                        style="@style/SearchBoxStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFlatModel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Property Images Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Images"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Image Upload Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Images (Max 10)"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_camera"
                        app:iconGravity="textStart"
                        style="@style/SecondaryButtonStyle" />

                    <!-- Selected Images RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSelectedImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />

                    <!-- Image Count Text -->
                    <TextView
                        android:id="@+id/tvImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="0/10 images selected" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Price Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Resale Price -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilResalePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Resale Price (SGD)"
                        app:startIconDrawable="@drawable/ic_home"
                        style="@style/SearchBoxStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etResalePrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Submit Property"
        android:textSize="16sp"
        app:icon="@drawable/ic_activities"
        app:iconGravity="textStart"
        style="@style/PrimaryButtonStyle" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:indeterminateTint="@color/primary" />

</LinearLayout> 