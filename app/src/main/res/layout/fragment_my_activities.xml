<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- 页面标题 -->
    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:text="My Activities"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 功能按钮网格 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/functionButtonsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 第一行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- 添加房源按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddProperty"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Add Property"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add_property"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconPadding="12dp"
                    style="@style/PrimaryButtonStyle" />

                <!-- 我的发布按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyListings"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="My Listings"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_my_listings"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconPadding="12dp"
                    style="@style/SecondaryButtonStyle" />

            </LinearLayout>

            <!-- 第二行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 我的收藏按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyFavorites"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="My Favorites"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_my_favorites"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconPadding="12dp"
                    style="@style/SecondaryButtonStyle" />

                <!-- 我的评论按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyComments"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="My Comments"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_my_comments"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconPadding="12dp"
                    style="@style/SecondaryButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 功能列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFunctions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@color/background_primary"
        app:layout_constraintTop_toBottomOf="@id/functionButtonsCard"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 