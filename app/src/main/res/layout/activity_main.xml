<?xml version="1.0" encoding="utf-8"?>
<!-- 使用 CoordinatorLayout 可以更好地协调 AppBarLayout 和其他组件的滚动行为 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".MainActivity">

    <!-- 1. 顶部应用栏容器 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_secondary"
        android:theme="@style/ThemeOverlay.Material3.Light">

        <!-- Material Design 风格的工具栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_secondary"
            app:title="HDBPILOT"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_logo"
            app:navigationIconTint="@color/orange_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. 中间可变内容区：Fragment 容器 -->
    <!-- NavHostFragment 是 Navigation Component 的核心，用于承载和切换 Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" /> <!-- 指向下面的导航图 -->

    <!-- 3. 底部导航栏 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background_secondary"
        android:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemRippleColor="@color/orange_light" /> <!-- 指向下面的菜单文件 -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
